{
  "private": true,
  "name": "@clipboard-sync/client",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "dev:ts": "vite",
    "dev": "tauri dev",
    "build:ts": "tsc -b && vite build",
    "build": "tauri build",
    "lint:ts": "tsc -b --noEmit && eslint . && prettier --check .",
    "lint:ts:fix": "tsc -b --noEmit && eslint . --fix && prettier --write .",
    "lint:rust": "(cd src-tauri && cargo fmt --check && cargo clippy --all-targets -- -D warnings)",
    "lint:rust:fix": "(cd src-tauri && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged --all-targets -- -D warnings)",
    "lint": "conc --kill-others-on-fail npm:lint:ts npm:lint:rust",
    "lint:fix": "conc --kill-others-on-fail npm:lint:ts:fix npm:lint:rust:fix",
    "clean": "rm -rf dist/ src-tauri/target/"
  },
  "dependencies": {
    "@mantine/core": "^8.3.14",
    "@mantine/form": "^8.3.14",
    "@mantine/hooks": "^8.3.14",
    "@tabler/icons-react": "^3.36.1",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "~2.5.1",
    "@tauri-apps/plugin-clipboard-manager": "~2.3.2",
    "@tauri-apps/plugin-log": "~2.8.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "immer": "^11.1.3",
    "mantine-form-zod-resolver": "^1.3.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@clipboard-sync/eslint-config": "workspace:*",
    "@clipboard-sync/schemas": "workspace:*",
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  }
}
