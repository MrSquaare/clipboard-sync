{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipboard Sync",
  "mainBinaryName": "Clipboard Sync",
  "version": "0.2.0-pre.1",
  "identifier": "fr.mrsquaare.clipboard-sync",
  "build": {
    "beforeDevCommand": "pnpm dev:ts",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:ts",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipboard Sync",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' ipc://localhost ws: wss:",
        "img-src": "'self' asset: https://asset.localhost data:",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage", "nsis", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
